<Window x:Class="YTplayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YouTube Audio Player" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBox Name="UrlTextBox" Width="400" Margin="10"/>
            <Button Content="リストに追加" Click="AddToList_Click" Margin="10"/>
            <ListBox Name="UrlListBox" Width="400" Height="100" Margin="10"/>
            <Button Content="再生" Click="Play_Click" Margin="10"/>
            <Button Content="一時停止" Click="Pause_Click" Margin="10"/>
            <Button Content="前の曲" Click="Previous_Click" Margin="10"/>
            <Button Content="次の曲" Click="Next_Click" Margin="10"/>
            <Slider Name="PositionSlider" Width="400" Margin="10" ValueChanged="PositionSlider_ValueChanged"/>
        </StackPanel>
    </Grid>
</Window>